<h1> All Passengers </h1>

<% @passengers.each do |passenger| %>
  <ul class="flex">
    <li><%= link_to passenger.name, passenger_path(passenger) %></li>
    <li><%= link_to "Edit", edit_passenger_path(passenger) %></li>
    <li><%= link_to "Delete", passenger_path(passenger), :data => {:confirm => 'Are you sure?'}, method: :delete %></li>
  </ul>
<% end %>

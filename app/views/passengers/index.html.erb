<h1> All Passengers </h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Edit</th>
      <th>Delete</th>
    </tr>
  </thead>
  <tbody>
      <% @passengers.each do |passenger| %>
      <tr>
        <td><%= link_to passenger.name, passenger_path(passenger)%></td>
        <td><%= link_to "Edit", edit_passenger_path(passenger) %></td>
        <td><%= link_to "Delete", passenger_path(passenger), :data => {:confirm => 'Are you sure?'}, method: :delete %></td>
      </tr>
      <% end %>
  </tbody>
</table>
<br>

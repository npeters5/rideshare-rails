<h1>Editing Trip #<%= @trip.id %></h1>

<%= form_for @trip do |f| %>
  <%= f.label :date %>
  <%= f.date_field :date, :value => @trip.pretty_date, "data-provide" => 'datepicker' %>
  <br>

  <%= f.label :driver %>
  <%= f.select :driver_id, Driver.all.map { |driver| [driver.name, driver.id] } %>
  <br>

  <%= f.label :passenger %>:
  <%= f.select :passenger_id, [[@trip.passenger.name, @trip.passenger.id]] %>
  <br>

  <%= f.label :rating %>
  <%= f.select :rating, (1..5).to_a, :value => @trip.rating %>
  <br>

  <%= f.label :cost %>
  <%= f.text_field :cost_in_dollar %>
  <br>

  <%= f.submit "Update" %>

<% end %>

<h1>All Drivers</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Average Rating</th>
      <th>Edit</th>
      <th>Delete</th>
    </tr>
  </thead>
  <tbody>
      <% @drivers.each do |driver| %>
      <tr>
        <td><%= link_to driver.name, driver_path(driver)%></td>
        <td><%= driver.average_rating %></td>
        <td><%= link_to "Edit", edit_driver_path(driver) %></td>
        <td><%= link_to "Delete", driver_path(driver), :data => {:confirm => 'Are you sure?'}, method: :delete %></td>
      </tr>
      <% end %>
  </tbody>
</table>
<br>
